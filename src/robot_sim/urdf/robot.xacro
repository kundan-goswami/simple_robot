    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0.201784" rpy=" 0 0 0"/>
      <inertia
          ixx="1.0" ixy="0" ixz="0"
          iyy="1.0" iyz="0"
          izz="1.0"
      />
    </inertial>
    <collision name='collision'>
      <geometry>
        <box size="0.406054 0.406054 0.10"/>
      </geometry>
    </collision>

    <visual name='chair'>
      <origin xyz="0 0 0" rpy="0 0 -3.14"/>
      <geometry>
         <!-- <box size="0.40 0.35  0.1"/>  -->
